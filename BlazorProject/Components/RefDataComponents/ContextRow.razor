<tr>
    <td>
        <input type="text" @bind="Context.Key" @oninput="Validate" />
        @if (string.IsNullOrWhiteSpace(Context.Key))
        {
            <span class="text-danger">This field can't be empty.</span>
        }
    </td>
    <td>
        <input type="text" @bind="Context.Description" @oninput="Validate" />
        @if (string.IsNullOrWhiteSpace(Context.Description))
        {
            <span class="text-danger">This field can't be empty.</span>
        }
    </td>
    <td>
        <button @onclick="SaveChanges" disabled="@IsSaveDisabled">Save</button>
        <button @onclick="CancelEdit">Cancel</button>
    </td>
</tr>

@code {
    [Parameter]
    public ContextModel? Context { get; set; }

    [Parameter]
    public EventCallback OnSave { get; set; }

    [Parameter]
    public EventCallback OnCancel { get; set; }

    private bool IsSaveDisabled => string.IsNullOrWhiteSpace(Context.Key) || string.IsNullOrWhiteSpace(Context.Description);

    private void Validate()
    {
        IsSaveDisabled = string.IsNullOrWhiteSpace(Context.Key) || string.IsNullOrWhiteSpace(Context.Description);
    }

    private void SaveChanges()
    {
        if (!IsSaveDisabled)
        {
            OnSave.InvokeAsync();
        }
    }

    private void CancelEdit()
    {
        OnCancel.InvokeAsync();
    }
}